<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            color: #000;
            margin: 0;
            padding: 0;
        }
        .header-container {
            background-color: #1c1f3b;
            color: #fff;
            padding: 10px;
            display: flex;
            justify-content: space-between; /* Align header to right */
            align-items: center;
        }
        .search-form {
            margin-top: 20px;
            margin-left: 20px;
        }
        .search-form input[type="text"] {
            width: 300px; /* Adjust width of search input */
        }
        .search-form button {
            margin-left: 10px;
        }
        .form-container {
            background-color: #343a40; /* Change to dark grey */
            padding: 30px;
            margin-top: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            color: #fff;
        }
        .large-textarea {
            width: 100%; /* Make the textarea wider */
            height: 400px; /* Adjust height for better multiline input */
        }
    </style>
</head>
<body>
    <div class="header-container">
        <div>
            <h1>Log In</h1>
        </div>
        <a href="/index"> Index Page</a>

    </div>
    <div class="container">
       
       <label for="username">User Name</label>
    </br>
       <input id="username"/>
    </br>
       <label for="password">Password</label>
    </br>
       <input id="password"/>
    </br>
       <button id="loginBtn" type="button">Submit</button>

    </div>

    <script>



        // JavaScript to enable/disable search button based on input length
 const loginFormHandler = async (event) => {
  event.preventDefault();

  const username = document.querySelector('#username').value.trim();
  const password = document.querySelector('#password').value.trim();

  if (username && password) {

    const response = await fetch('/api/users/login', {
      method: 'POST',
      body: JSON.stringify({ username, password }),
      headers: { 'Content-Type': 'application/json' },
    }
    );

    if (response.ok) {
        alert('Now you have logged in as administrator')
        localStorage.setItem('login', 'true');
        document.location.replace('/index');
        } else {
        alert('Failed to log in.');
        localStorage.setItem('login', 'false');
        document.location.replace('/');
    }
  } 
};



  
document
  .querySelector('#loginBtn')
  .addEventListener('click', loginFormHandler);
        
</script>
</body>
</html>
